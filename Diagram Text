CODE DIAGRAM : (https://dbdiagram.io)





Table "salle" {
  "salle_id" serial [pk, increment]
  "name" varchar(255)
}

Table "table_a_manger" {
  "table_id" serial [pk, increment]
  "salle_id" int
  "taille" int(10)
}

Table "table_res" {
  "id_table_res" serial [pk, increment]
  "table_id" int
  "res_id" int
}

Table "reservation" {
  "res_id" serial [pk, increment]
  "client_id" int
  "res_date" date
  "nb_personne" int
}

Table "client" {
  "client_id" serial [pk, increment]
  "nom" varchar
  "prenom" varchar
}

Table "menu_carte" {
  "id_menu_carte" serial [pk, increment]
  "nom" varchar
  "id_marge" int
}

Table "recette" {
  "id" serial [pk, increment]
  "nom" varchar
  "type" varchar //plat, dessert, entree
}

Table "creation_menu_carte" {
  "id_creation_menu_carte" serial [pk, increment]
  "id_recette" int 
  "id_menu" int
}

Table "prend_menu" {
  "id_prend_menu" serial [pk, increment]
  "id_table" int
  "id_menu" int
}

Table "creation_recette" {
  "id_creation_recette" serial [pk, increment]
  "id_recette" int
  "id_ingredient" int
  "quantite" float
  "ordre" int
}

Table "ingredient" {
  "id_ingredient" serial [pk, increment]
  "nom" varchar
  "prix_unitaire" float
}

Table "marge" {
  "id_marge" serial [pk, increment]
  "valeur" float
}


Ref: "table_res"."table_id" < "table_a_manger"."table_id"

Ref: "table_res"."res_id" < "reservation"."res_id"

Ref: "table_a_manger"."salle_id" < "salle"."salle_id"

Ref: "client"."client_id" < "reservation"."client_id"

Ref: "menu_carte"."id_menu_carte" < "creation_menu_carte"."id_menu"

Ref: "creation_menu_carte"."id_recette" < "recette"."id"

Ref: "prend_menu"."id_table" < "table_a_manger"."table_id"

Ref: "prend_menu"."id_menu" < "menu_carte"."id_menu_carte"

Ref: "menu_carte"."id_marge" < "marge"."id_marge"

Ref: "creation_recette"."id_recette" < "recette"."id"

Ref: "creation_recette"."id_ingredient" < "ingredient"."id_ingredient"
