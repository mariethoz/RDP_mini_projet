CODE DIAGRAM : (https://dbdiagram.io)


Table "salle" {
  "salle_id" serial [pk, increment]
  "name" varchar(255)
}

Table "table" {
  "table_id" serial [pk, increment]
  "salle_id" int
  "taille" int(10)
}

Table "personnel" {
  "personnel_id" serial [pk, increment]
  "nom" varchar
  "prenom" varchar
  "type" int
}

Table "personnel_table" {
  "id" serial [pk, increment]
  "personnel_id" int
  "tabel_id" int
}

Table "personnel_type" {
  "personnel_type_id" serial [pk, increment]
  "type" varchar
}

Table "table_res" {
  "id" serial [pk, increment]
  "table_id" int
  "res_id" int
}

Table "reservation" {
  "res_id" serial [pk, increment]
  "client_id" int
  "res_date" date
  "nb_personne" int
}

Table "client" {
  "client_id" serial [pk, increment]
  "nom" varchar
  "prenom" varchar
}

Table "menu_carte" {
  "id" serial [pk, increment]
  "nom" varchar
  "id_marge" int
}

Table "recette" {
  "id" serial [pk, increment]
  "nom" varchar
  "type" varchar //plat, dessert, entree
}

Table "creation_menu_carte" {
  "id" serial [pk, increment]
  "id_recette" int 
  "id_menu" int
}

Table "prend_menu" {
  "id" serial [pk, increment]
  "id_table" int
  "id_menu" int
}

Table "creation_recette" {
  "id" serial [pk, increment]
  "id_recette" int
  "id_ingredient" int
  "quantite" float
  "ordre" int
}

Table "ingredient" {
  "id" serial [pk, increment]
  "nom" varchar
  "prix_unitaire" float
}

Table "marge" {
  "id" serial [pk, increment]
  "valeur" float
}


Ref: "personnel_type"."personnel_type_id" < "personnel"."type"

Ref: "table_res"."table_id" < "table"."table_id"

Ref: "table_res"."res_id" < "reservation"."res_id"

Ref: "personnel_table"."tabel_id" < "table"."table_id"

Ref: "table"."salle_id" < "salle"."salle_id"

Ref: "personnel"."personnel_id" < "personnel_table"."personnel_id"

Ref: "client"."client_id" < "reservation"."client_id"

Ref: "menu_carte"."id" < "creation_menu_carte"."id_menu"

Ref: "creation_menu_carte"."id_recette" < "recette"."id"

Ref: "prend_menu"."id_table" < "table"."table_id"

Ref: "prend_menu"."id_menu" < "menu_carte"."id"

Ref: "menu_carte"."id_marge" < "marge"."id"

Ref: "creation_recette"."id_recette" < "recette"."id"

Ref: "creation_recette"."id_ingredient" < "ingredient"."id"
